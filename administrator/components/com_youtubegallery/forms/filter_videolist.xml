<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			inputmode="search"
			label="COM_YOUTUBEGALLERY_SEARCH_IN_VIDEOID_OR_TITLE"
			description="COM_YOUTUBEGALLERY_SEARCH_IN_VIDEOID_OR_TITLE_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="published"
			type="VideoLists"
			label="COM_YOUTUBEGALLERY_SEARCH_SELECT_VIDEOLIST"
			onchange="this.form.submit();"
			extension="com_youtubegallery"
			>
			<option value="">COM_YOUTUBEGALLERY_SEARCH_SELECT_VIDEOLIST</option>
		</field>
	</fields>
	
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.id ASC"
			validate="options"
			>
			<option value="">JGLOBAL_SORT_BY</option>

			<option value="a.es_videoid ASC">COM_YOUTUBEGALLERY_VIDEOLIST_HEADING_VIDEOID_ASC</option>
			<option value="a.es_videoid DESC">COM_YOUTUBEGALLERY_VIDEOLIST_HEADING_VIDEOID_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		
		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
